<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">#121212</item> <!-- 夜间模式深色背景 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item> <!-- 70% 白色 -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#121212</item>
        <!-- 卡片样式 -->
        <item name="cardViewStyle">@style/CardView.Elevated.Night</item>
        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
        <!-- 文本输入样式 -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Night</item>
    </style>
    
    <!-- No Action Bar theme for splash screen -->
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- 夜间模式卡片样式 -->
    <style name="CardView.Elevated.Night" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- 夜间模式按钮样式 -->
    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">#121212</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- 夜间模式文本输入样式 -->
    <style name="Widget.App.TextInputLayout.Night" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextColor">@color/primary_light</item>
    </style>
    
    <!-- 夜间模式文本样式 -->
    <style name="TextAppearance.App.Headline.Night" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.App.Subtitle.Night" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>